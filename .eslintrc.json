{
  "extends": [
    "eslint:recommended",
    "prettier",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-indent-props": [2, 2],
    "react/jsx-no-bind": "off",
    "react/sort-comp": "off",
    "no-console": "off"
  }
}